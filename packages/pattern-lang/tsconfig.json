{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@wheelgen/types": ["../wheelgen-types/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules"],
  "references": [
    { "path": "../wheelgen-types" }
  ]
}
